<table class="table table-hover table-inverse">
<!-- 検索対象が User の場合 -->
<% if @range == "User" %>
  <table>
    <tr>
      <th>Name</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <!-- 検索対象が Post の場合 -->
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </table>
<% end %>