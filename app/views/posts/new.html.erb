 <%# if user_signed_in? && @user == current_user %>
<h1>投稿ページ</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @post do |f| %>
　<h4>投稿画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>施設や道の場所名</h4>
  <%= f.text_field :title %>
  
  <h4>文章</h4>
  <%= f.text_area :body %>
	
	<p>
  <%= f.submit '投稿' %>
  </p>
 <% end %>