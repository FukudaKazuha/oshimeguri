<head>
 <%= stylesheet_link_tag 'posts_index'%>
</head>

<!--投稿とユーザーはリンクにすること-->
<div class="main-visual">
 <div class="">投稿検索</div>
 <div class="">ユーザー検索</div>
</div>

<main>
<div class="post_all">投稿一覧</div>
<% @posts.each do |post| %>
 <%= link_to post_path(post.id) do %>
  <%= image_tag post.image, size: "300x300" %>
 <% end %>
<% end %>

</main>