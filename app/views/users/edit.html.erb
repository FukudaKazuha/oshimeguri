<h1>プロフィール編集</h1>
 <!--プロフィールの更新失敗バリデーション-->
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラー
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

 <%= form_with model: @user do |f| %>
  <p>
  <label for="inputImage">プロフィール写真</label>
   <%= f.file_field :profile_image, accept: "image/*" %>  
  </p>
  <p>
  <label for="inputName">ユーザーネーム</label>
   <%= f.text_field :username, id:"inputName"%>
  </p>
  <p>
  <label for="inputIntroduction">自己紹介</label>
   <%= f.text_area :introduction, id:"inputIntroduction"%>
  </p>
  <p><%= f.submit "更新" %></p>
  
 <% end %>
